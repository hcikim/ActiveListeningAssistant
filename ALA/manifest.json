{
	"manifest_version": 3,
	"name": "slack-msg-recognizer",
	"author": "TSB",
	"description": "it recognizes the strategy of a received message",
	"version": "1.0",
	"options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
	"permissions": [
    "storage"
  ],
	"content_scripts": [
		{
			"matches": [
				"http://app.slack.com/*",
				"https://app.slack.com/*"
			],
			"js": ["content.js", "options.js"],
			"css": ["styles.css"]
		}
	],

	"background": {
		"service_worker": "background.js"
		// "scripts": ["background.js"]
	},

	"action": {}
}